{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.10.6/.schema/devbox.schema.json",
  "packages": [
    "zig@0.11.0",
    "zls@0.11.0",
    "opencv@4.6.0",
    "pkg-config@latest",
    "curl@latest",
    "unzip@latest"
  ],
  "shell": {
    "scripts": {
      "version": "zig version",
      "build": "zig build --verbose",
      "test": "zig build test --verbose",
      "fmt": "zig fmt ./**/*.zig",
      "fmt-check": "zig fmt --check ./**/*.zig"
    }
  }
}
